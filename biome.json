{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noEmptyTypeParameters": "warn",
				"noExcessiveCognitiveComplexity": "warn",
				"noUselessCatch": "warn",
				"useOptionalChain": "warn"
			},
			"style": {
				"noNegationElse": "warn",
				"noShoutyConstants": "error",
				"useBlockStatements": "off",
				"useConst": "warn",
				"useExportType": "error",
				"useImportType": "error",
				"useTemplate": "error"
			},
			"suspicious": {
				"noConsoleLog": "error",
				"noExplicitAny": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"lineWidth": 100
		}
	}
}